{{> HTMLTag }}
	<head>
		{{> HeadContent }}
		<title>Twestival {{CurrentYear}}</title>
		
		<link rel="stylesheet" href="css/home.css" />
		
		<!--  Slider -->
		<script type="text/javascript" src="js/vendor/slides.jquery-1.2.0.min.js"></script>
		<script type="text/javascript">
			$(function(){
				$("#slides").slides({
					preload: true,
					preloadImage: 'img/common/loading.gif',
					play: 5000,
					pause: 5000,
					hoverPause: true
				});
			});
		</script>
		
		<!-- Twitter -->
		<script type="text/javascript" src="//widgets.twimg.com/j/2/widget.js"></script>
		<link href="//widgets.twimg.com/j/2/widget.css" type="text/css" rel="stylesheet"/>
		
		<!-- Instagram -->
		<script type="text/javascript" src="js/vendor/spectragram.min.js"></script>
		<script type="text/javascript">
			jQuery.fn.spectragram.accessData = {
				clientID: '170979fa018b4752977f4b7c15d7c7fd'
			};
		</script>
	</head>
	<body id="home">
		{{> Header }}
		
		<div id="header-stamps" class="wrapper">
			{{# PrimaryPromotions }}
				<div class="stamp" id="header-stamp-{{Sequence}}">
					<a href="{{LinkUri}}">
						<img src="{{ImageUri}}" alt="{{Name}} Event" />
						<span class="location">
							{{Name}}
						</span>
						<span class="date">
							{{#format.toEuropeanDate}}{{Date}}{{/format.toEuropeanDate}}
						</span>
					</a>
				</div>
			{{/ PrimaryPromotions }}
		</div>

		<div id="slides">
			<div class="slides_container">
				<!-- TODO: Make manageable via PHP -->
				<div class="slide">
					<a href="#" title="Drilling the first Charity: Water well" target="_blank">
						<img src="img/home/slider/content/slide-1.jpg" width="1500" height="600" alt="Drilling the first Charity: Water well"/>
					</a>
					<div class="caption">
						<a href="#" title="Drilling the first Charity: Water well" target="_blank">
							<span class="title">
								Drilling the first Charity: Water well
							</span>
							<span class="link">
								read more
							</span>
						</a>
					</div>
				</div>
				<div class="slide">
					<a href="#" title="The Twestival Tunisia Team" target="_blank">
						<img src="img/home/slider/content/slide-2.jpg" width="1500" height="600" alt="The Twestival Tunisia Team"/>
					</a>
					<div class="caption">
						<a href="#" title="The Twestival Tunisia Team" target="_blank">
							<span class="title">
								The Twestival Tunisia Team
							</span>
							<span class="link">
								read more
							</span>
						</a>
					</div>
				</div>
			</div>
		</div>
		
		<div id="sponsors" class="wrapper">
			<div class="header">
				<img src="img/home/sponsors/header.png" alt="Special Thanks"/>
			</div>
			<!-- Vertical and horizonal centering of unknown image sizes. http://giveupandusetables.com/ -->
			<table id="sponsor-list">
				<tbody>
					<tr>
						<!-- TODO: Make manageable -->
						<td class="sponsor">
							<a href="https://www.paypal.com/">
								<img src="img/partners/sponsors/content/sponsor-default.png" alt="???"/>
							</a>
						</td>
						<td class="sponsor">
							<a href="http://www.project7.com/">
								<img src="img/partners/sponsors/content/sponsor-project7.png" alt="Project 7"/>
							</a>
						</td>
						<td class="sponsor">
							<a href="https://www.paypal.com/">
								<img src="img/partners/sponsors/content/sponsor-paypal.png" alt="PayPal"/>
							</a>
						</td>
						<td class="sponsor">
							<a href="http://www.stayclassy.org">
								<img src="img/partners/sponsors/content/sponsor-stayclassy.png" alt="StayClassy"/>
							</a>
						</td>
						<td class="sponsor">
							<a href="#">
								<img src="img/partners/sponsors/content/sponsor-default.png" alt="???"/>
							</a>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
		
		<a id="content"></a>
		
		<div id="involve" class="wrapper">
			<div id="involve-video">
 				<iframe width="560" height="315" src="http://www.youtube.com/embed/wg2w2EMIWTM?wmode=opaque&rel=0" frameborder="0" allowfullscreen>
 					<a href="https://www.youtube.com/watch?v=wg2w2EMIWTM">Watch Twestival introduction</a>
 				</iframe>
			</div>
			<div id="involve-stamp">
				<img src="img/home/involve/stamp.png" alt=""/>
			</div>
			<div id="involve-message">
				<div class="header">Twestival is a global movement</div>
				<div class="message">
					that uses social media for social good,
					empowering communities around
					the world to organize one-of-a-kind
					offline events in support of local causes.
					Explore how you can make a difference!
				</div>
			</div>
			<a href="get_involved" id="involve-button">
				Get Involved
			</a>
		</div>
		
		<div id="social-media" class="wrapper">
			<div class="header">
				<img src="img/home/social-media/header.png" alt="Tag it #Twestival"/>
			</div>
			<div class="caption">
				Check out what's happening around the world !
			</div>
			
			<div id="networks">
				<div id="social-media-twitter" class="network">
					<div id="social-media-twitter-body" class="body">
						<script type="text/javascript">
							new TWTR.Widget({
								version: 2,
								type: 'search',
								search: 'twestival',
								interval: 5000,
								title: '',
								subject: '',
								width: 212,
								height: 212,
								theme: {
									shell: {
										background: 'transparent',
										color: '#444444'
									},
									tweets: {
										background: 'transparent',
										color: '#444444',
										links: '#34747c'
									}
								},
								features: {
									scrollbar: false,
									loop: true,
									live: true,
									hashtags: true,
									timestamp: true,
									avatars: true,
									toptweets: true,
									behavior: 'default'
								}
							}).render().start();
						</script>
						<noscript>
							<a href="https://twitter.com/search?q=%23twestival">See #twestival Tweets</a>
						</noscript>
						<div class="fadeout">&nbsp;</div>
					</div>
					<a href="http://twitter.com/twestival" id="social-media-twitter-action" class="action" target="_blank">Follow&nbsp;&nbsp;Us</a>
				</div>
				<div id="social-media-instagram" class="network">
					<div id="social-media-instagram-body" class="body"></div>
					<script type="text/javascript">
						$.getJSON('https://api.instagram.com/v1/tags/twestival/media/recent?callback=?',
								{
									client_id: '170979fa018b4752977f4b7c15d7c7fd',
									count: 4
								},
								function(response) {
									var target = $('#social-media-instagram-body');
									for(var i = 0; i < response.data.length; i++) {
										var item = response.data[i];
										target
												.append($('<a/>', {href: item.link, target: '_blank'})
														.append($('<img/>', {src: item.images.thumbnail.url, alt: item.caption.text})));
									};
								});
					</script>
					<noscript>
						<a href="http://instagram.com/tags/twestival/feed/recent.rss">See recent #twestival Instagrams</a>
					</noscript>
					<a href="http://instagram.com/twestival" id="social-media-instagram-action" class="action" target="_blank">Follow&nbsp;&nbsp;Us</a>
				</div>
				<div id="social-media-youtube" class="network">
					<div id="social-media-youtube-body" class="body"></div>
					<script type="text/javascript">
						$.getJSON('https://gdata.youtube.com/feeds/api/users/twestivalglobal/uploads?callback=?',
								{
									'v': 2,
									'alt': 'jsonc',
									'start-index': 1,
									'max-results': 4
								},
								function(response) {
									var target = $('#social-media-youtube-body');
									for(var i = 0; i < response.data.items.length; i++) {
										var item = response.data.items[i];
										target
												.append($('<a/>', {href: item.player['default'], target: '_blank'})
														.append($('<img/>', {src: item.thumbnail.sqDefault, alt: item.title})));
									};
								});
					</script>
					<noscript></noscript>
					<a href="https://www.youtube.com/user/twestivalglobal" id="social-media-youtube-action" class="action" target="_blank">See&nbsp;&nbsp;More<span class="accessible-text">on YouTube</span></a>
				</div>
				<div id="social-media-facebook" class="network">
					<div id="fb-root"></div>
					<script type="text/javascript">
						(function(d, s, id) {
							  var js, fjs = d.getElementsByTagName(s)[0];
							  if (d.getElementById(id)) return;
							  js = d.createElement(s); js.id = id;
							  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
							  fjs.parentNode.insertBefore(js, fjs);
						}(document, 'script', 'facebook-jssdk'));
					</script>
					<noscript></noscript>
					<fb:like-box href="https://www.facebook.com/Twestival" width="212" height="212" show_faces="true" stream="false" border_color="#f1f1ef" header="false"></fb:like-box>
					<a href="https://www.facebook.com/Twestival" id="social-media-facebook-action" class="action" target="_blank">Like&nbsp;&nbsp;It</a>
				</div>
			</div>
		</div>
		
		<div class="clearfix"></div>
		
		<div id="events" class="wrapper">
			<div class="header">
				<img src="img/home/promotion/secondary/header.png" alt="Official Events"/>
			</div>
			
			<div id="event-groups">
				<ul class="event-group horizontal top">
					{{#SecondaryPromotionsRow1}}
						<li class="event {{Position}}">
							{{#LinkUri}}
								<a href="{{LinkUri}}">
									<span class="logo"><img src="{{ImageUri}}" alt="{{Name}} Event" /></span>
									<span class="location">{{Name}}</span>
									<span class="date">{{#format.toEuropeanDate}}{{Date}}{{/format.toEuropeanDate}}</span>
								</a>
							{{/LinkUri}}
						</li>
					{{/SecondaryPromotionsRow1}}
				</ul>
				<ul class="event-group horizontal">
					{{#SecondaryPromotionsRow2}}
						<li class="event {{Position}}">
							{{#LinkUri}}
								<a href="{{LinkUri}}">
									<span class="logo"><img src="{{ImageUri}}" alt="{{Name}} Event" /></span>
									<span class="location">{{Name}}</span>
									<span class="date">{{#format.toEuropeanDate}}{{Date}}{{/format.toEuropeanDate}}</span>
								</a>
							{{/LinkUri}}
						</li>
					{{/SecondaryPromotionsRow2}}
				</ul>
				<ul class="event-group horizontal bottom">
					{{#SecondaryPromotionsRow3}}
						<li class="event {{Position}}">
							{{#LinkUri}}
								<a href="{{LinkUri}}">
									<span class="logo"><img src="{{ImageUri}}" alt="{{Name}} Event" /></span>
									<span class="location">{{Name}}</span>
									<span class="date">{{#format.toEuropeanDate}}{{Date}}{{/format.toEuropeanDate}}</span>
								</a>
							{{/LinkUri}}
						</li>
					{{/SecondaryPromotionsRow3}}
					<li id="event-more" class="event right">
						<a href="official_events">See All Events</a>
					</li>
				</ul>
			</div>
		</div>

		{{> Footer }}
	</body>
</html>